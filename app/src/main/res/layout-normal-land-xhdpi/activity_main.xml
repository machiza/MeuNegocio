<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="mz.co.malambe.meunegocio.MainActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo_anje"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:textColor="#ffffff"
            android:backgroundTint="#cc141b"
            android:background="@drawable/buttonstyle3"
            android:padding="10dp"
            android:onClick="btnEntrarOnClick"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="#cc141b"
            android:background="@drawable/buttonstyle1"
            android:padding="10dp"
            android:onClick="btnEntrarOnClick"
            android:layout_margin="5dp"/>

    </LinearLayout>

</LinearLayout>
